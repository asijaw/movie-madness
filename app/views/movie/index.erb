<h1>The Movie Madness</h1>
<% movie = @movies.order(rating: :desc) %>
<% movie.each do |m| %>
    <p><h3>Title: <%= m.name %></h3><br>
    Year: <%= m.year %><br>
    Category: <%= m.category %><br>
    Rating: <%= m.rating %><br>
    User: <%= m.user.name %><br></p>
    <% if m.user == current_user %>
        <a href='<%="/movies/#{ m.id }/edit"%>'>Edit Movie</a>
    <% end %>
<% end %>